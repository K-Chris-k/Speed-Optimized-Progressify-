<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css">
<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>

{% case section.settings.colors %}
  {% when 'white' %}
    {%- assign color_scheme = 'homepage-sections-wrapper--white' -%}
  {% when 'light' %}
    {%- assign color_scheme = 'homepage-sections-wrapper--light' -%}
  {% when 'accent' %}
    {%- assign color_scheme = 'homepage-sections-wrapper--accent' -%}
  {% when 'dark' %}
    {%- assign color_scheme = 'homepage-sections-wrapper--dark' -%}
{% endcase %}


<style>
  .main-container{
    width:100%;
    background-color:#F4F8FC;
    padding-top:50px;
    padding-bottom:80px;
  }
    .sample-sliders{
      width:90%;
      margin-left:5%;
      margin-right:5%;
      background-color:#F4F8FC;
      color:black;
    }
  .form-main
  {
      width:90%;
      margin-left:5%;
      margin-right:5%;
      padding-left:10%;
      padding-right:10%;
      border-radius:15px;
      background-color:white;
  }
  
  .service-title{
    margin-bottom:20px;
  }
  .img-custom-width div img{
    width:60px;
    height:60px;
  }
   .swiper-slide{
     height:auto;
     padding:20px 15px;
     border-radius:15px;
     background-color:white;
   }
  .logo-list-content{
    text-align:center;
  }
</style>
<div class="main-container">
<div class="swiper sample-sliders">

  {% if section.settings.title != blank %}
    <div class="sitewide--title-wrapper service-title">
      <h2 class="homepage-sections--title">{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}
  
    <div class="swiper-wrapper">      
      {% for block in section.blocks %}
      {%- assign testimonial_has_link = false -%}
      {% if block.settings.link != blank %}
        {%- assign testimonial_has_link = true -%}
      {% endif %}
       
      <div class="swiper-slide">
          {% if testimonial_has_link %}
          <a href="{{ block.settings.link }}">
        {% endif %}

     
             {% if block.settings.image != blank %}
          <div class="testimonial-section--image img-custom-width">
            {% if section.settings.circle_images %}
              {% assign crop = 'center' %}
            {% endif %}
            {% assign img_alt =  block.settings.image.alt | default: shop.name %}
            {% render 'responsive-image' with block.settings.image, alt: img_alt | escape crop: 'center', default_size: '200x200', force_aspect: 1, allow_stretch: true %}
          </div>
        {% endif %}
           <div class="logo-list-content">
              {% if block.settings.customer_name != blank %}
          <span class="h6">{{ block.settings.customer_name | escape }}</span>
        {% endif %}
        
          {% if block.settings.testimonial_text != blank %}
          <div >
           <p>{{ block.settings.testimonial_text }} </p> 
          </div>
        {% endif %} 
          
           </div>
            {% if testimonial_has_link %}
          </a>
        {% endif %}

        </div>  
      {% endfor %} 
      </div>
</div>

  
</div>
<script>
const swiper = new Swiper('.sample-sliders', {
    slidesPerView: 2,        //added
    spaceBetween: 15,        //added
    pagination: {                       
        el: '.swiper-pagination',
    },
     autoplay: {
    delay: 3000,
    pauseOnMouseEnter: true,
  },
    navigation: {                       
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
    },
   breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 15,
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 20,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 20,
        },
      }
})
</script>

